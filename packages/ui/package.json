{
  "name": "@lcax/ui",
  "version": "0.0.1",
  "description": "UI Library for LCAx apps",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "main": "dist/esm/index.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "@apollo/client": "^3.12.7",
    "@mantine/core": "^7.9.1",
    "@mantine/hooks": "^7.9.1",
    "@tabler/icons-react": "^3.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.23.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "postcss": "^8.5.1",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.4.2",
    "typescript": "~5.6.2",
    "vitest": "^1.6.0"
  },
  "scripts": {
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "codegen": "graphql-codegen --config codegen.yml",
    "build": "tsc",
    "tsc": "tsc -b",
    "build:watch": "npm run postbuild && tsc --watch",
    "postbuild": "copyfiles --flat ./src/assets/*.{png,svg} ./dist/esm/assets/",
    "lint": "eslint src/**/*.{tsx,ts}",
    "lint:fix": "eslint --fix src/**/*.{tsx,ts}",
    "format:fix": "prettier --write src/",
    "format": "prettier --check src/",
    "fix": "npm run lint:fix && npm run format:fix"
  },
  "author": "Christian Kongsgaard <christian@kongsgaard.eu>",
  "license": "MIT",
  "dependencies": {
    "@fontsource/inter-tight": "^5.1.1"
  }
}
